<!--pages/main/main.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}"
        data-current="0" bindtap="swichNav">{{pageNameUserStatus}}</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" 
        data-current="1" bindtap="swichNav">{{pageNameGroupManagement}}</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" 
        data-current="2" bindtap="swichNav">{{pageNNameAbout}}</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item>
    <view class="main-container">
      <view class="horizontal-container">
        <label class="main-label">User Name</label>
        
        <label class="main-input">{{userInfo.nickName}}</label>
      </view>
      <view class="horizontal-container">
        <text class="main-input">{{info}}</text>
      </view>
    </view> 
  </swiper-item>
  <swiper-item>
    <view>Page2</view>
  </swiper-item>
  <swiper-item>
    <view>Page3</view>
  </swiper-item>
</swiper>